<resources>

    <style name="FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="botao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tamanho_texto_botao</item>
        <item name="android:textColor">@color/cor_da_fonte_botao</item>
        <item name="android:background">@drawable/botao_personalizado</item>
    </style>
    <style name="mensagem_de_erro">
        <item name="android:textColor">@color/cor_mensagem_erro</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>
